<div id="pagewrap">

	<header>
		<h1>MSM Golden Seven</h1>
	</header>
		
	<section id="content">
		
		<h2>Directors</h2>
		<a href="/directors/new_form">Add a new director</a>
		<ol>
		<% @alld.each do |person| %>
   		<li>
   		<h4><%= person.name %></h4>
   		<p><%= person.bio %></p>
   		<p><%= person.dob %></p>
   		<p><%= person.image_url %></p>
   	    <a href="/directors/<%= person.id %>">Show details</a>
   	    <a href="/directors/<%= person.id %>/edit_form">Edit</a>
   	    <a href="/delete_director/<%= person.id %>">Delete director</a>
   		</li>
   		
        <% end %>
	    </ol>

	</section>
	
	<section id="middle">
		<h2>Actors</h2>
	
		<a href="/actors/new_form">Add a new actor</a>
		<ol>
		<% @alld.each do |person| %>
   		<li>
   		<h4><%= person.name %></h4>
   		<p><%= person.bio %></p>
   		<p><%= person.dob %></p>
   		<p><%= person.image_url %></p>
   	    <a href="/actors/<%= person.id %>">Show details</a>
   	    <a href="/actors/<%= person.id %>/edit_form">Edit</a>
   	    <a href="/delete_actor/<%= person.id %>">Delete actor</a>
   		</li>
   		
        <% end %>
	    </ol>
	</section>

	<aside id="sidebar">
		<h2>Movies</h2>
		<p>X</p>

	</aside>
	

</div>
